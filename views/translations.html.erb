<table>
  <% keys.each do |key, translations| %>
    <tr>
      <td><%= key %></td>
      <td>
        <table>
          <% translations.each do |translation| %>
            <tr>
              <td><%= translation[:locale] %></td>
              <td><input type=text value="<%= translation[:text] %>"</td>
            </tr>
          <% end %>
        </table>
      </td>
    </tr>
  <% end %>
</table>
